{{#with model}}
    <form class="pure-form pure-form-aligned" {{action "save" on="submit"}}>
        <fieldset>
            <div class="pure-control-group">
                <label for="name">Username</label>
                {{input id="name" type="text" placeholder="Username" value=id readonly=true}}
            </div>

            <div class="pure-control-group">
                <label for="password">Time to get ready</label>
                {{input id="time-to-get-ready" type="text" placeholder="Time to get ready" value=time_to_get_ready readonly=controller.readOnly}}
            </div>

            <div class="pure-control-group">
                <label for="password">Created At</label>
                {{input id="created-at" type="text" placeholder="Created At" value=created_at readonly=controller.readOnly}}
            </div>

            {{#unless controller.readOnly}}
                <button type="submit" class="pure-button pure-button-primary">Save</button>
            {{/unless}}
        </fieldset>
    </form>

    {{commute-list commutes=commutes showRelationship=false}}

    <form class="pure-form" {{action "addCommute" on="submit"}}>
        <fieldset>
            {{input id="new-commute-name" value=controller.newCommuteName type="text" placeholder="Name"}}
            <button id="start" type="submit" class="pure-button pure-button-primary">Add Commute</button>
        </fieldset>
    </form>
{{/with}}
