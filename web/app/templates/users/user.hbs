<form class="pure-form pure-form-aligned">
    <fieldset>
        <div class="pure-control-group">
            <label for="name">Username</label>
            {{input id="name" type="text" placeholder="Username" value=username readonly=true}}
        </div>

        <div class="pure-control-group">
            <label for="password">Time to get ready</label>
            {{input id="time_to_get_ready" type="text" placeholder="Time to get ready" value=time_to_get_ready readonly=true}}
        </div>
    </fieldset>
</form>
